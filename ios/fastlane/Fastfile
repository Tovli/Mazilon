default_platform(:ios)

platform :ios do
  desc "Build and upload a beta build to TestFlight"
  lane :beta do
    # Authenticate with App Store Connect using your API key from GitHub Secrets
    app_store_connect_api_key(
      key_id: ENV['APP_STORE_API_KEY_ID'],
      issuer_id: ENV['APP_STORE_CONNECT_API_ISSUER_ID'],
      key_content: ENV['APP_STORE_CONNECT_API_KEY_CONTENT']
    )

    # Build your iOS app. For a Flutter project, the default scheme is usually "Runner".
    build_ios_app(scheme: "Runner")
    
    # Upload the built IPA to TestFlight.
    upload_to_testflight(skip_waiting_for_build_processing: true)
  end
end
